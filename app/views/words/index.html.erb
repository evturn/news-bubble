<div class="bubble-container">
  <div class="blocker-left"></div>
  <div class="blocker-left-small"></div>
  <div class="blocker-right"></div>
  <% @words.each do |word| %>
  <div class="bubble"><div class='bubble-text'><%= word.keyword %></div></div>
  <% end %>
</div>

<div class="ghostface">
    <%= image_tag( 'hamburger.jpg') %>
  <ul>
    <% @articles.each do |article| %>
      <div class="articles">
        <li>
          <div class="headline">
            <%= article.headline.upcase %>
          </div>
          
        </li>
      </div>
      <div class="lead">
            <p>
              <%= article.lead %>..
                <form  class="read" method="get" action="<%= article.url %>" target"_blank" >
                <input type="submit" value="READ" >
              </form>
            </p>
          </div>
    <% end %>
  </ul>
</div>



